# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Redis (required)
REDIS_URL=redis://localhost:6379

# PostgreSQL (required)
DATABASE_URL=postgresql://user:password@localhost:5432/pm_arb

# ===========================================
# OPTIONAL - Paper trading works without these
# ===========================================

# Anthropic (for market matching)
ANTHROPIC_API_KEY=sk-ant-xxx

# Polymarket
POLYMARKET_API_KEY=
POLYMARKET_PRIVATE_KEY=

# Kalshi
KALSHI_EMAIL=
KALSHI_PASSWORD=

# Binance (no auth needed for public websocket)

# Alerts (optional)
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=

# Risk Settings
INITIAL_BANKROLL=500
DRAWDOWN_LIMIT_PCT=20
DAILY_LOSS_LIMIT_PCT=10
POSITION_LIMIT_PCT=10
PLATFORM_LIMIT_PCT=50

# Mode
PAPER_TRADING=true
