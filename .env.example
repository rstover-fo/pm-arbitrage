# ===========================================
# REQUIRED - Application will not start without these
# ===========================================
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/pm_arb

# ===========================================
# OPTIONAL - Paper trading works without these
# ===========================================

# Anthropic (for market matching - LLM fallback)
ANTHROPIC_API_KEY=sk-ant-xxx

# -------------------------------------------
# Venue Credentials
# -------------------------------------------

# Polymarket (CLOB API - required for live Polymarket trading)
POLYMARKET_API_KEY=
POLYMARKET_SECRET=
POLYMARKET_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=

# Kalshi (RSA key-based auth - required for live Kalshi trading)
# Generate API key at https://kalshi.com/account/api-keys
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY=

# -------------------------------------------
# Oracle API Keys
# -------------------------------------------

# FRED (Federal Reserve Economic Data)
# Get free API key at https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# NWS Weather API (no key needed - uses User-Agent header)
# Binance (no auth needed for public websocket)

# -------------------------------------------
# Alerts (optional)
# -------------------------------------------
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=

# -------------------------------------------
# Risk Settings
# -------------------------------------------
INITIAL_BANKROLL=500
DRAWDOWN_LIMIT_PCT=20
DAILY_LOSS_LIMIT_PCT=10
POSITION_LIMIT_PCT=10
PLATFORM_LIMIT_PCT=50

# -------------------------------------------
# Mode
# -------------------------------------------
PAPER_TRADING=true
